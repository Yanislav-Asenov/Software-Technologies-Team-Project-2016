@model SoftwareTechnologiesTeamProject.Models.Team
@{
    ViewBag.Title = "EditTeam";
}

<h2>EditTeam</h2>


<table class="table">
    <tr class="tableInfoCells">
        <th>Position</th>
        <th>Club</th>
        <th>Games played</th>
        <th>Victories</th>
        <th>Draws</th>
        <th>Losses</th>
        <th>Goals for</th>
        <th>Goals against</th>
        <th>Goal difference</th>
        <th>Points</th>
        <th></th>
        <th></th>
    </tr>
    <tr class="singleTeamInfo" id="hiddenForm-@Model.Id">
        @using (Html.BeginForm("EditTeam", "Leagues", FormMethod.Post))
        {

            @Html.AntiForgeryToken()

            <td>
                <div class="newTeamInput"></div>
            </td>
            <td>
                <div class="newTeamInputClubName">@Html.TextBoxFor(m => Model.Name, new {@Value = Model.Name})</div>
            </td>
            <td>
                <div class="newTeamInput">@Html.TextBoxFor(m => Model.GamesPlayed, new {Value = Model.GamesPlayed})</div>
            </td>
            <td>
                <div class="newTeamInput">@Html.TextBoxFor(m => Model.Victories, new {Value = Model.Victories})</div>
            </td>
            <td>
                <div class="newTeamInput">@Html.TextBoxFor(m => Model.Draws, new {Value = Model.Draws})</div>
            </td>
            <td>
                <div class="newTeamInput">@Html.TextBoxFor(m => Model.Losses, new {Value = Model.Losses})</div>
            </td>
            <td>
                <div class="newTeamInput">@Html.TextBoxFor(m => Model.GoalsFor, new {Value = Model.GoalsFor})</div>
            </td>
            <td>
                <div class="newTeamInput">@Html.TextBoxFor(m => Model.GoalsAgainst, new {Value = Model.GoalsAgainst})</div>
            </td>
            <td>
                <div class="newTeamInput">@Html.TextBoxFor(m => Model.GoalDifference, new {Value = Model.GoalDifference})</div>
            </td>
            <td>
                <div class="newTeamInput">@Html.TextBoxFor(m => Model.Points, new {Value = Model.Points})</div>
            </td>
            @Html.HiddenFor(m => m.LeagueId)
            @Html.HiddenFor(m => m.Id)
            <td>
                <div class="teamTableInfoCells">
                    <a id="cancelEdit-@Model.Id" onclick="toggleEditing(@Model.Id)">Cancel</a>
                </div>
            </td>
            <td>
                <div class="teamTableInfoCells">
                    <input type="submit" value="Edit" class="btn btn-default"/>
                </div>
            </td>

        }
    </tr>

</table>
