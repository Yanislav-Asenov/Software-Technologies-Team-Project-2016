@using SoftwareTechnologiesTeamProject.Models
@using System.IO;
@using System.Collections.Generic;
@model SoftwareTechnologiesTeamProject.ViewModels.AboutUsViewModel

@{
    ViewBag.Title = "About Us";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>
<br />


<h2>Our developers:</h2>
<br />

@foreach (var member in Model.Developers)
{
    <div class="dev">
        <img class="dev-img" src="@member.Image.ImagePath" width="170" height="170" />
        <p>
            @member.Name <br />
            @member.Info
        </p>
    </div>
} 

<h2>Our designers:</h2>
<br />

@foreach (var member in Model.Designers)
{
    <div class="des">
        <img class="des-img" src="@member.Image.ImagePath" width="170" height="170" />
        <p>
            @member.Name <br />
            @member.Info
        </p>
</div>
} 