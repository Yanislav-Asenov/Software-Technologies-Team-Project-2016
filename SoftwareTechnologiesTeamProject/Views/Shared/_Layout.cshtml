<body>

    <header>
        <div class="container">
            <div class="row">
                <div class="header_top">
                    <div class="col-md-3 col-sm-3">
                        <div class="follow_us">
                            <ul>
                                
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="logo">
                            <a href="@Url.Action("Index", "Home")" title="List View" class="links">
                                <img class="dropTableLogo" alt="Droptable" src="@Url.Content("../Content/Images/droptableV3.png")">
                            </a>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4">
                        <div class="header_search">
                            @using (Html.BeginForm())
                            {
                                <form>
                                    <input class="searchPost" type="text" name="searchString" placeholder="Search..">
                                </form>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <nav class="navbar navbar-default primary-bg">
                        <div class="navbar-header">
                            <button aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse" id="navbar" aria-expanded="false" style="height: 0px;">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Posts", "Index", "Posts")</li>
                                <li>@Html.ActionLink("Leagues", "Index", "Leagues")</li>
                                <li>@Html.ActionLink("Matches", "Index", "Matches")</li>
                            </ul>
                            @Html.Partial("_LoginPartial")
                            
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>

